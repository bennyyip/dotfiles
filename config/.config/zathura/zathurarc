set smooth-scroll true
set font "noto sans cjk normal 14"

map <Space> scroll half-down
map u scroll half-up
map <C-d> scroll full-down
map <C-u> scroll full-up

map = zoom in
map + zoom default

unmap q

set synctex true
set synctex-editor-command "gvim --servername GVIM --remote +%{line} %{input}"
